<Page
    x:Class="Amur8.TestApp.CustomPages.CountdownTimerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Amur8.TestApp.CustomPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Amur8="using:Amur8.Controls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Center" Margin="0,50,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Amur8:CountdownTimer FontSize="25" 
                                  EnableNotification="True"
                                  NotificationHeading="AmurTimer"
                                  NotificationBody="CountdownTimer has completed" 
                                  OpenSettingsDirection="Right"
                                  OpenSettingsDuration="1000"
                                  CloseSettingsDuration="1200" IsSlider="False"/>
        </Grid>
    </Grid>
</Page>
